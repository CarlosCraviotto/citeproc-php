{
    "name": "seboettg/citeproc-php",
    "description": "Full-featured CSL processor (https://citationstyles.org)",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian BÃ¶ttger",
            "email": "seboettg@gmail.com",
            "homepage": "http://sebastianboettger.net",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/seboettg/citeproc-php/issues"
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "citation-style-language/locales",
                "version":"1.0.0",
                "source": {
                    "type": "git",
                    "url": "http://github.com/citation-style-language/locales.git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "citation-style-language/styles-distribution",
                "version":"1.0.0",
                "source": {
                    "type": "git",
                    "url": "http://github.com/citation-style-language/styles-distribution.git",
                    "reference": "master"
                }
            }
        }
    ],
    "autoload": {
        "psr-4": {"": "src/"}
    },
    "require": {
        "seboettg/collection": "^1.1",
        "myclabs/php-enum": "^1.5",
        "symfony/polyfill-mbstring": "^1.3",
        "citation-style-language/locales":"@dev",
        "citation-style-language/styles-distribution":"@dev"
    },
    "require-dev": {
        "satooshi/php-coveralls": "^1",
        "phpunit/phpunit": "^6.0"
    },

    "scripts": {
        "post-install-cmd": [
            "cd ./tests/fixtures/basic-tests/; ./processor.py -g",
            "chmod +x vendor/bin/phpunit"
        ],
        "test": "vendor/bin/phpunit"
    }
}
